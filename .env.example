# Environment configuration for Lot Legends: PaveQuest
# Copy to .env and fill values. Do not commit secrets.

# Core
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Lot Legends: PaveQuest

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# Database (Postgres / Prisma)
DATABASE_URL=

# Maps / Geospatial
GOOGLE_MAPS_API_KEY=

# AWS S3 (optional uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=

# Feature flags (optional defaults)
# e.g. {"game_mode":false,"ar_scan":false,"premium_pass":false}
NEXT_PUBLIC_DEFAULT_FLAGS=
